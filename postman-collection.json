          "});",
          "",
          "pm.test('Response has JSON body', function () {",
          "    pm.expect(pm.response.headers.get('Content-Type')).to.include('application/json');",
          "});",
          "",
          "// Extract IDs from create responses",
          "if (pm.response.code === 201) {",
          "    const responseJson = pm.response.json();",
          "    if (responseJson.data && responseJson.data.id) {",
          "        if (pm.info.requestName.includes('Category')) {",
          "            pm.collectionVariables.set('categoryId', responseJson.data.id);",
          "        } else if (pm.info.requestName.includes('WebSeries')) {",
          "            pm.collectionVariables.set('webseriesId', responseJson.data.id);",
          "        }",
          "    }",
          "}",
          "",
          "// Log response for debugging",
